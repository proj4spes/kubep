apiVersion: v1
kind: Pod
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: {{ kubernetes_image }}:{{ kubernetes_version }}
    command:
    - /hyperkube
    - scheduler
    - --leader-elect=true
    - --master=http://127.0.0.1:8080
    - --v={{ kubernetes_log_level }}
    livenessProbe:
      httpGet:
        host: 127.0.0.1
        path: /healthz
        port: 10251
      initialDelaySeconds: 15
      timeoutSeconds: 1
